#!/bin/sh

if [ "$1" = "gruvbox-light" ]; then
    BLACK="#fbf1c7"
    LBLACK="#282828"
    RED="#cc241d"
    LRED="#9d0006"
    GREEN="#98971a"
    LGREEN="#79740e"
    YELLOW="#d79921"
    LYELLOW="#b57614"
    BLUE="#458588"
    LBLUE="#076678"
    MAGENTA="#b16286"
    LMAGENTA="#8f3f71"
    CYAN="#689d6a"
    LCYAN="#427b58"
    WHITE="#7c6f64"
    LWHITE="#282828"

    TYPE="LIGHT"
    BACKGROUND="#fbf1c7"
    FOREGROUND="#282828"
    CURSOR="#928374"
    FOCUS="$CYAN"
elif [ "$1" = "gruvbox" ]; then
    BLACK="#665c54"
    LBLACK="#928374"
    RED="#ea6962"
    LRED="#ea6962"
    GREEN="#a9b665"
    LGREEN="#a9b665"
    YELLOW="#e78a4e"
    LYELLOW="#d8a657"
    BLUE="#7daea3"
    LBLUE="#7daea3"
    MAGENTA="#d3869b"
    LMAGENTA="#d3869b"
    CYAN="#89b482"
    LCYAN="#89b482"
    WHITE="#d4be98"
    LWHITE="#d4be98"

    TYPE="DARK"
    BACKGROUND="#282828"
    FOREGROUND="#d4be98"
    CURSOR="#a89984"
    FOCUS="$CYAN"
elif [ "$1" = "denisse" ]; then
    BLACK="#000000"
    RED="#cc0000"
    GREEN="#4e9a06"
    YELLOW="#c4a000"
    BLUE="#3465a4"
    MAGENTA="#75507b"
    CYAN="#06989a"
    WHITE="#d3d7cf"
    LBLACK="#555753"
    LRED="#ef2929"
    LGREEN="#8ae234"
    LYELLOW="#fce94f"
    LBLUE="#729fcf"
    LMAGENTA="#ad7fa8"
    LCYAN="#34e2e2"
    LWHITE="#eeeeec"

    TYPE="DARK"
    BACKGROUND="#00002c"
    FOREGROUND="#57d3e2"
    CURSOR="#e9422b"
    FOCUS="#4ec2f7"
    TRANSPARENT="0.85"
elif [ "$1" = "aesthetic" ]; then
    BLACK="#000000"
    RED="#990000"
    GREEN="#00A600"
    YELLOW="#999900"
    BLUE="#0000B2"
    MAGENTA="#B200B2"
    CYAN="#00A6B2"
    WHITE="#BFBFBF"
