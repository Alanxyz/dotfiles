    LRED="#E50000"
    LGREEN="#00D900"
    LYELLOW="#E5E500"
    LBLUE="#0000FF"
    LMAGENTA="#E500E5"
    LCYAN="#00E5E5"
    LWHITE="#E5E5E5"

    TYPE="LIGHT"
    BACKGROUND="#FFFFFF"
    FOREGROUND="#000000"
    CURSOR="$FOREGROUND"
    FOCUS="$WHITE"
elif [ "$1" = "nord" ]; then
    BLACK="#2E3440"
    LBLACK="#4C566A"
    RED="#BF616A"
    LRED="$RED"
    GREEN="#A3BE8C"
    LGREEN="$GREEN"
    YELLOW="#EBCB8B"
    LYELLOW="$YELLOW"
    BLUE="#81A1C1"
    LBLUE="$BLUE"
    MAGENTA="#B48EAD"
    LMAGENTA="$MAGENTA"
    CYAN="#88C0D0"
    LCYAN="$CYAN"
    WHITE="#ECEFF4"
    LWHITE="#ECEFF4"

    TYPE="DARK"
    BACKGROUND="$BLACK"
    FOREGROUND="$WHITE"
    CURSOR="#8FBCBB"
    FOCUS="$BLUE"
elif [ "$1" = "cosme" ]; then
    BLACK="#303030"
    LBLACK="#3f3939"
    RED="#ffafd7"
    LRED="#ffc8e3"
    GREEN="#afffd7"
    LGREEN="#c8ffe3"
    YELLOW="#ffaf87"
    LYELLOW="#ffc0a0"
    BLUE="#afd7ff"
    LBLUE="#c8e3ff"
    MAGENTA="#ffd7ff"
    LMAGENTA="#fff0ff"
    CYAN="#d7d7ff"
    LCYAN="#f0f0ff"
    WHITE="#eeeeee"
    LWHITE="#808080"

    TYPE="DARK"
    BACKGROUND="$BLACK"
    FOREGROUND="$WHITE"
    CURSOR="$CYAN"
    FOCUS="$RED"

elif [ "$1" = "hyper" ]; then
    BLACK="#000000"
    LBLACK="#686868"
    RED="#FF3B30"
    LRED="#FF3B30"
    GREEN="#4CD964"
    LGREEN="#4CD964"
    YELLOW="#FFCC00"
    LYELLOW="#FFCC00"
    BLUE="#0095FF"
    LBLUE="#0095FF"
    MAGENTA="#FF2D55"
    LMAGENTA="#FF2D55"
