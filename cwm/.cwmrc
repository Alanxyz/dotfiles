color	activeborder	"#bebebe"
color	inactiveborder	"#bebebe"
color	font		"#000"
color	selfont		"#fff"
color	menubg		"#fff"
color	menufg		"#000"

borderwidth	2
gap		25 0 0 0

fontname	"xft:Iosevka Term:style=Regular:size=16"

sticky	yes

ignore	polybar

autogroup	1	urxvtc
autogroup	3	firefox

command terminal 	urxvtc
command web 		firefox
command reader		zathura

unbind-key	all

bind-key	4-b "brillo -A 10"
bind-key	4S-b "brillo -U 10"
bind-key	4C-b "redshift -O 4500K"
bind-key	4SC-b "redshift -x"

bind-key	4-m "amixer set Master toggle"
bind-key	4-v "amixer set Master 2%+"
bind-key	4S-v "amixer set Master 2%-"

bind-key	4-s "scrot -q 100 -F /tmp/screenshot.png"
bind-key	4S-s		"scrot -q 100 -s -F /tmp/screenshot.png"

bind-key	4S-q		quit
bind-key	4S-r		restart
bind-key	4-p menu-exec
bind-key	4-Return	urxvtc
bind-key	4-n		"urxvtc -e vim -c :WikiIndex"
bind-key	4S-n		"urxvtc -e vim -c :WikiJournal"

bind-key	4-1		group-only-1
bind-key	4-2		group-only-2
bind-key	4-3		group-only-3
bind-key	4-4		group-only-4
bind-key	4-5		group-only-5
bind-key	4-6		group-only-6
bind-key	4-7		group-only-7
bind-key	4-8		group-only-8
bind-key	4-9		group-only-9

bind-key	4M-1	  	group-toggle-1
bind-key	4M-2		group-toggle-2
bind-key	4M-3		group-toggle-3
bind-key	4M-4		group-toggle-4
bind-key	4M-5		group-toggle-5
bind-key	4M-6		group-toggle-6
bind-key	4M-7		group-toggle-7
bind-key	4M-8		group-toggle-8
bind-key	4M-9		group-toggle-9

bind-key	4S-1		window-movetogroup-1
bind-key	4S-2		window-movetogroup-2
bind-key	4S-3		window-movetogroup-3
bind-key	4S-4		window-movetogroup-4
bind-key	4S-5		window-movetogroup-5
bind-key	4S-6		window-movetogroup-6
bind-key	4S-7		window-movetogroup-7
bind-key	4S-8		window-movetogroup-8
bind-key	4S-9		window-movetogroup-9

bind-key	4-period	group-cycle
bind-key	4-comma		group-rcycle

bind-key	4-x		window-delete
bind-key	4-e		window-maximize
bind-key	4S-e		window-fullscreen
bind-key	4-h		window-move-left-big
bind-key	4-j		window-move-down-big
bind-key	4-k		window-move-up-big
bind-key	4-l		window-move-right-big
bind-key	4S-h		window-resize-left
bind-key	4S-j		window-resize-down
bind-key	4S-k		window-resize-up
bind-key	4S-l		window-resize-right
bind-key	4-t		window-vtile
bind-key	4S-t		window-htile
bind-key	4-Tab		window-cycle-ingroup

bind-mouse	4-1		window-move
bind-mouse	4-3		window-resize

